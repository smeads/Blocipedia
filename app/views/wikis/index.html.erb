<br>
<div class='jumbotron'>
<h1>All Wikis</h1>
</div>

<% if policy(Wiki.new).create? %>
  <%= link_to "New Wiki", new_wiki_path(), class: 'btn btn-success' %>
<% end %>

<% @wikis.each do |wiki| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to wiki.title, wiki %>
      </h4>
    </div>
  </div>
<% end %>
